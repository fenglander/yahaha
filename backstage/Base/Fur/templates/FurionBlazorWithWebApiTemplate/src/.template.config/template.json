{
  "$schema": "http://json.schemastore.org/template",
  "author": "百小僧",
  "classifications": [
    "Furion",
    "Blazor",
    "WebApi",
    "Api"
  ],
  "name": "Furion Blazor With WebApi",
  "identity": "Furion.Template.BlazorWithWebApi",
  "shortName": "furionblazorapi",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "FurionBlazorApi",
  "preferNameDirectory": true,
  "symbols": {
    "framework": {
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        {
          "choice": "net5",
          "description": ".NET5 脚手架"
        },
        {
          "choice": "net6",
          "description": ".NET6 脚手架"
        },
        {
          "choice": "net7",
          "description": ".NET7 脚手架"
        },
        {
          "choice": "net8",
          "description": ".NET8 脚手架"
        }
      ],
      "defaultValue": "net7",
      "description": "选择要创建的 .NET5-8 脚手架"
    },
    "net5": {
      "type": "computed",
      "value": "(framework == \"net5\")"
    },
    "net6": {
      "type": "computed",
      "value": "(framework == \"net6\")"
    },
    "net7": {
      "type": "computed",
      "value": "(framework == \"net7\")"
    },
    "net8": {
      "type": "computed",
      "value": "(framework == \"net8\")"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(framework != \"net5\")",
          "exclude": [
            "FurionBlazorApi.Web.Entry/Startup.cs"
          ]
        }
      ]
    }
  ]
}